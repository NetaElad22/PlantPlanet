@model PlantPlanet.Models.SubCategory

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h4>עריכת תת קטגוריה</h4>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SubCategoryId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ParentCategory" class="control-label"></label>
                    <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategoryId"></select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <br />
                    <input type="file" asp-for="ImageURL" class="form-control" name="ImageURL" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                    <label>תמונה נוכחית:</label>
                    <br />
                    <img src="~/@Html.DisplayFor(model => model.ImageURL)" style="height:50%; width:50%" />
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="שמירה" class="btn btn-outline-info" />
                    <a asp-action="Index" class="btn btn-outline-danger">ביטול</a>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">חזרה לרשימת תתי הקטגוריות</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
