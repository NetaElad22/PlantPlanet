<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlantPlanet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/customer.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="/js/layout.js"></script>
    <script src="https://documentcloud.adobe.com/view-sdk/main.js"></script>

</head>
<body>
    <header>
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img class="logo" src="~/images/logo.jpeg" alt="Plant Planet" />
        </a>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom mb-3" style="font-family:Gisha">
            <div class="container" style="direction:rtl">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">ראשי</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Index">קטלוג מוצרים</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Create">הרשמה</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">אודות</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FrequentQuestions" asp-action="Index">שאלות נפוצות</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="QuestionsAndAnswers" asp-action="Index">שימוש באתר</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">צור קשר</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Edit">הסל שלי</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <form asp-action="Search" asp-controller="Catalog" style="margin-top: 4%">
            <input name="query" class="search-input" type="search" placeholder="חיפוש" />
            <button class="search-container" style="border:none; background-color:transparent">
                <i class="fas fa-search" style="margin-right: 5px" aria-hidden="true"></i>
            </button>
        </form>

        <div class="sign-in-btn-container">
            <button class="btn btn-outline-success">כניסה</button>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div style="display: flex; flex-direction:row; justify-content:space-around; margin-top: 5px">
            <div style="display: flex; flex-direction:column">
                <span><span style="font-size:18px;">טלפון</span> 0544568541</span>
                <span><span style="font-size:18px;">מייל</span> plantplanetisrael@gmail.com</span>
                <div class="circles-container">
                    <a href="https://www.facebook.com/plantplanetisrael" class="circle-link">
                        <img class="circle-img" src="~/images/facebook.png" />
                    </a>
                    <a href="https://www.instagram.com/plant.O.planet/" class="circle-link">
                        <img class="circle-img" src="~/images/instagram.png" />
                    </a>
                </div>
            </div>

            <div style="display: flex; flex-direction: column; line-height: 30px">
                <button id="privacy" style="border: none; background-color: transparent; padding-top: 2%;">
                    מדיניות פרטיות
                </button>
                <button id="cookies" style="border: none; background-color: transparent; padding-top: 2%;">
                    מדיניות שימוש בקוקיז
                </button>
                <button id="usage" style="border: none; background-color: transparent; padding-top: 2%;">
                    מדיניות ותנאי שימוש
                </button>
            </div>

            <div style="display: flex; flex-direction: column; line-height: 30px">
                <span style="font-size:18px;">שעות פתיחה</span>
                <span>א-ה בין השעות 8:00-19:00</span>
                <span>ו-ש בין השעות 10:00-15:00</span>
                <span style="font-size:18px;">כתובת</span>
                <span>הסייפן 35, רמת השרון</span>
            </div>
        </div>

        <div class="about-text">
            &copy; 2021 - PlantPlanet
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


