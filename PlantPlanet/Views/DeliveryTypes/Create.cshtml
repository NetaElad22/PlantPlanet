@model PlantPlanet.Models.DeliveryType

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="direction:rtl; text-align:right; margin-right:10%">
    <h4 style="font-weight:bold">הוספת סוג משלוח</h4>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryCostAddition" class="control-label"></label>
                    <input asp-for="DeliveryCostAddition" class="form-control" value="0" />
                    <span asp-validation-for="DeliveryCostAddition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="יצירה" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-danger">ביטול</a>
                </div>
            </form>
        </div>
    </div>
    <div class="row" style="margin-top:3%">
        <a asp-action="Index">חזרה לרשימת סוגי המשלוח</a>
    </div>
</div>


