@model PlantPlanet.Models.DeliveryType

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="direction:rtl; text-align:right">
    <h4>עריכת סוג משלוח</h4>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DeliveryTypeId" />
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryCostAddition" class="control-label"></label>
                    <input asp-for="DeliveryCostAddition" class="form-control" />
                    <span asp-validation-for="DeliveryCostAddition" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="שמירה" class="btn btn-outline-info" />
                    <a asp-action="Index" class="btn btn-outline-danger">ביטול</a>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">חזרה לרשימת סוגי המשלוח</a>
    </div>
</div>


            

          

