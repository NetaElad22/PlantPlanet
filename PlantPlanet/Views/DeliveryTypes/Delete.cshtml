    <h4 style="font-weight:bold">מחיקת סוג משלוח</h4>
    <br />
    <div class="row">
        <div class="col-md-4" style="font-weight:bold">
            @Html.DisplayNameFor(model => model.Type)
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Type)
        </div>
    </div>
    <br />
    <div class="row">
