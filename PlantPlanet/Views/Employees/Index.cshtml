@model IEnumerable<PlantPlanet.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/filter.css" />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a asp-action="Create" class="btn btn-outline-info">יצירת עובד.ת חדש.ה</a>
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <button id="filterProducts" style="all:unset; padding-right:10%; display: flex; cursor: pointer">
                <i class="fa fa-search"></i>
                <h6 style="margin-right: 5px"> סינון עובדים.ות</h6>
            </button>
            <div id="myModal" class="modal">
                <!-- Modal content -->
                <div class="modal-content" style="align-items:center">
                    <span class="close">&times;</span>
                    <form asp-action="Filter" asp-controller="Employees" style="margin-top: 4%">

                        <div class="container" style="text-align:center">
                            <h4>סינון עובדים.ות</h4>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <i>סינון לפי שם העובד.ת</i>
                                </div>
                                <div class="col-md-6">
                                    <input name="NameQuery" class="search-input" type="search" placeholder="שם עובד.ת" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <i>סינון לפי מספר טלפון </i>
                                </div>
                                <div class="col-md-6">
                                    <input name="phoneQuery" class="search-input" type="search" placeholder="מספר טלפון" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <i>סינון לפי עיר מגורים</i>
                                </div>
                                <div class="col-md-6">
                                    <input name="cityQuery" class="search-input" type="search" placeholder="עיר מגורים" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <i>סינון לפי משכורת מקסימלית</i>
                                </div>
                                <div class="col-md-6">
                                    <input name="salaryQuery" class="search-input" type="number" placeholder="משכורת מקסימלית" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                    <button class="search-container" style="border:none; background-color:transparent">
                                        <i class="fas fa-search" style="margin-right: 5px" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            @*<form asp-action="Search" asp-controller="Customers" style="margin-right:3%">
            <input name="query" class="search-input" type="search" placeholder="חיפוש לקוח.ה" />
            <button class="search-container" style="border:none; background-color:transparent">
                <i class="fas fa-search" style="margin-right: 5px" aria-hidden="true"></i>
            </button>
        </form>*@
        </div>
    </div>
    <br />
    <div class="row" style="font-weight:bold">
        <div class="col-md-3">
            <h4>@Html.DisplayNameFor(model => model.TeudatZehut)</h4>
        </div>
        <div class="col-md-3">
            <h4>@Html.DisplayNameFor(model => model.FirstName)</h4>
        </div>
        <div class="col-md-3">
            <h4>@Html.DisplayNameFor(model => model.LastName)</h4>
        </div>
        <div class="col-md-3">
            <h4>אפשרויות ניהול</h4>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <br />
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.TeudatZehut)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.FirstName)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.LastName)
            </div>
            <div class="col-md-3">
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">עריכה</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">פרטים</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">מחיקה</a>
            </div>
        </div>
    }
</div>
<script src="~/js/filter.js"></script>
