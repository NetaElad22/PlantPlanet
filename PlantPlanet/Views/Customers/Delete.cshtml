@model PlantPlanet.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/delete.css" />

<div class="container">
    <h4>מחיקת לקוח.ה</h4>
    <div class="row" style="font-weight:bold; padding-top:5%">
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.FirstName)
        </div>
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.LastName)
        </div>
        <div class="col-md-4">אפשרויות</div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.FirstName)
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.LastName)
        </div>
        <div class="col-md-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CustomerId" />
                <input type="submit" value="מחיקה" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">ביטול</a>
            </form>
        </div>
    </div>
    <div class="row" style="padding-top:8%">
        <a asp-action="Index">חזרה לרשימת הלקוחות</a>
    </div>
</div>
