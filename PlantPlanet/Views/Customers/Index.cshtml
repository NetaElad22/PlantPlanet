@model IEnumerable<PlantPlanet.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a asp-action="Create" class="btn btn-outline-info">יצירת לקוח.ה חדש.ה</a>
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <form asp-action="Search" asp-controller="Customers" style="margin-right:3%">
                <input name="query" class="search-input" type="search" placeholder="חיפוש לקוח.ה" />
                <button class="search-container" style="border:none; background-color:transparent">
                    <i class="fas fa-search" style="margin-right: 5px" aria-hidden="true"></i>
                </button>
            </form>
        </div>
    </div>
    <br />
    <div class="row" style="font-weight:bold">
        <div class="col-md-4">
            <h4>@Html.DisplayNameFor(model => model.FirstName)</h4>
        </div>
        <div class="col-md-4">
            <h4>@Html.DisplayNameFor(model => model.LastName)</h4>
        </div>
        <div class="col-md-4">
            <h4>אפשרויות ניהול</h4>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <br />
        <div class="row">
            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.FirstName)
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.LastName)
            </div>
            <div class="col-md-4">
                <a asp-action="Edit" asp-route-id="@item.CustomerId">עריכה</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">פרטים</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">מחיקה</a>
            </div>
        </div>
    }
</div>
