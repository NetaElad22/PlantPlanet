@model PlantPlanet.Models.Customer

@{
    ViewData["Title"] = "הרשמה";
}

<div class="create-customer-page">
    <div>
        <h1 class="text-center title">לקוח חדש</h1>
    </div>
    <div class="row inputs">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group input-container">
                    <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FirstName)" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group input-container">
                    <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.LastName)" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group input-container">
                    <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Email)" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group input-container">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.PhoneNumber)" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group input-container">
                    <input asp-for="User.UserName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.User.UserName)" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>
                <div class="form-group input-container">
                    <input asp-for="User.Password" class="form-control" placeholder="@Html.DisplayNameFor(model => model.User.Password)" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group input-container">
                    <input asp-for="City" class="form-control" placeholder="@Html.DisplayNameFor(model => model.City)" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="address">
                    <div class="form-group input-container">
                        <input asp-for="Street" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Street)" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-group input-container">
                        <input asp-for="HouseNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.HouseNumber)" />
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="address">
                    <div class="form-group input-container">
                        <input asp-for="FloorNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FloorNumber)" />
                        <span asp-validation-for="FloorNumber" class="text-danger "></span>
                    </div>
                    <div class="form-group input-container">
                        <input asp-for="FlatNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FlatNumber)" />
                        <span asp-validation-for="FlatNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group input-container">
                    <input asp-for="ZipCode" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ZipCode)" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label" style="display: flex">
                        <input class="form-check-input" asp-for="IsPremium" />
                        <span style="margin-right: 20px">@Html.DisplayNameFor(model => model.IsPremium)</span>
                    </label>
                </div>
                <div class="form-group" style="text-align: center">
                    <input type="submit" value="שמור" class="btn btn-success save-button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
