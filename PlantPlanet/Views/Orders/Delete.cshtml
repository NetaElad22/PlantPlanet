@model PlantPlanet.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/delete.css" />

<div class="container">
    <h4>מחיקת הזמנה</h4>
    <div class="row" style="font-weight:bold; padding-top:5%">
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.Customer)
        </div>
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.OrderId)
        </div>
        <div class="col-md-4">אפשרויות</div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)
        </div>
        <div class="col-md-4" style="max-height:220px;">
            @Html.DisplayFor(model => model.OrderId) 
        </div>
        <div class="col-md-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="OrderId" />
                <input type="submit" value="מחיקה" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">ביטול</a>
            </form>
        </div>
    </div>
    <div class="row" style="padding-top:8%">
        <a asp-action="Index">חזרה לרשימת ההזמנות</a>
    </div>
</div>
