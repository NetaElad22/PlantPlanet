@model PlantPlanet.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/delete.css" />
<link rel="stylesheet" href="~/css/products.css" />

<div class="container">
    <h4>מחיקת מוצר</h4>
    <div class="row" style="font-weight:bold; padding-top:5%">
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.ImageURL)
        </div>
        <div class="col-md-4">אפשרויות</div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="col-md-4" style="max-height:220px;">
            <img src="~/@Html.DisplayFor(model => model.ImageURL)" style="width:70%" />
        </div>
        <div class="col-md-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <input type="submit" value="מחיקה" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">ביטול</a>
            </form>
        </div>
    </div>
    <div class="row" style="padding-top:8%">
        <a asp-action="Index">חזרה לרשימת המוצרים</a>
    </div>
</div>
