@model PlantPlanet.Models.Store

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4 style="font-weight:bold">הוספת חנות</h4>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StoreName" class="control-label"></label>
                    <input asp-for="StoreName" class="form-control" />
                    <span asp-validation-for="StoreName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StoreLocationX" class="control-label"></label>
                    <input asp-for="StoreLocationX" class="form-control" />
                    <span asp-validation-for="StoreLocationX" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StoreLocationY" class="control-label"></label>
                    <input asp-for="StoreLocationY" class="form-control" />
                    <span asp-validation-for="StoreLocationY" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="יצירה" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-danger">ביטול</a>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">חזרה לרשימת החנויות</a>
    </div>
</div>